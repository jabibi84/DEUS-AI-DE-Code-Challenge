[flake8]
max-line-length = 88
exclude =
    .git,
    __pycache__,
    docs,
    build,
    dist,
    env,
    .env,
    venv,
    tests,
    .venv,
    env_*,
    venv_*,
    */env/*,  # Excluye subdirectorios llamados "env"
    */venv/*, # Excluye subdirectorios llamados "venv"
    .tox,     # Excluye directorios creados por herramientas como tox
    .mypy_cache  # Excluye cach√©s
extend-ignore = E501, W503